<Window x:Class="IndieXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndieXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Menu definitions -->
        <StackPanel Height="25" x:Name="TopNav" VerticalAlignment="Top" Orientation="Horizontal" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <StackPanel Margin="2,25,2,25" x:Name="MainContent" VerticalAlignment="Stretch"/>
        <StackPanel Height="25" VerticalAlignment="Bottom" x:Name="BotNav" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
    </Grid>
</Window>
