<Window x:Class="IndieXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndieXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Menu definitions -->
        <StackPanel Margin="0,0,0,20">
            <StackPanel Margin="0,0,0,10" x:Name="TopNav" Orientation="Horizontal" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <StackPanel Margin="5,5,5,5" x:Name="MainContent"/>
        </StackPanel>
        
        <StackPanel x:Name="BotNav" Orientation="Horizontal" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
        
    </Grid>
</Window>
