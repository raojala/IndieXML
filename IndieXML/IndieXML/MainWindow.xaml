<Window x:Class="IndieXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndieXML"
        mc:Ignorable="d"
        Title="IndieXML" Height="350" Width="525" x:Name="iXMLMain">
    <!--<Grid>
        -->
    <!-- Menu definitions -->
    <!--
        <StackPanel x:Name="TopNav" Orientation="Horizontal" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Height="25" VerticalAlignment="Top"/>
        <StackPanel Margin="2,25,2,25" x:Name="MainContent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <StackPanel x:Name="BotNav" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Height="25" VerticalAlignment="Bottom" />
    </Grid>-->

    <DockPanel x:Name="dpMain" LastChildFill="True">
        <StackPanel x:Name="TopNav" Orientation="Horizontal" DockPanel.Dock="Top"/>
        <StackPanel x:Name="BotNav" Orientation="Horizontal" DockPanel.Dock="Bottom"/>
        <StackPanel x:Name="MainContent" DockPanel.Dock="Bottom" />
        <TreeView x:Name="trvTables" DockPanel.Dock="Left" />
        <DataGrid x:Name="dgMainView" 
                  AutoGenerateColumns="True" 
                  CanUserAddRows="False"
                  IsReadOnly="False"/>
    </DockPanel>




</Window>